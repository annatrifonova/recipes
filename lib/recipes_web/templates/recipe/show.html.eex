<div class="content">
  <h1><%= @recipe.name %></h1>

  <p><%= @recipe.description %></p>

  <h2>Ingridients</h2>
  <span><%= link "Add ingridient", to: recipe_ingridient_path(@conn, :new, @recipe), class: "button is-success" %></span>
  <ul>
    <%= for ingridient <- @ingridients do %>
      <li>
        <%= ingridient.name %> - <%= ingridient.quantity %>
        <span><%= link "Edit", to: recipe_ingridient_path(@conn, :edit, @recipe, ingridient), class: "button is-small is-link" %></span>
        <span><%= link "Delete", to: recipe_ingridient_path(@conn, :delete, @recipe, ingridient), method: :delete, data: [confirm: "Are you sure?"], class: "button is-small is-danger" %></span>
      </li>
    <% end %>
  </ul>

  <h2>Cooking time</h2>
  <p><%= @recipe.time %> min</p>

  <h2>How to cook</h2>
  <p><%= @recipe.instructions %></p>

  <span><%= link "Edit", to: recipe_path(@conn, :edit, @recipe), class: "button is-link" %></span>
  <span><%= link "Back", to: recipe_path(@conn, :index), class: "button" %></span>
</div>